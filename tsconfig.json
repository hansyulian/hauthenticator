{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@config": ["src/config"],
      "@config/*": ["src/config/*"],
      "@components": ["src/components"],
      "@components/*": ["src/components/*"],
      "@screens": ["src/screens"],
      "@screens/*": ["src/screens/*"],
      "@assets/*": ["src/assets/*"],
      "@modules": ["src/modules"],
      "@modules/*": ["src/modules/*"],
      "@utils": ["src/utils"],
      "@utils/*": ["src/utils/*"],
      "@stores": ["src/stores"],
      "@stores/*": ["src/stores/*"],
      "@storage": ["src/storage"],
      "@storage/*": ["src/storage/*"],
      "@hooks": ["src/hooks"],
      "@hooks/*": ["src/hooks/*"],
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
